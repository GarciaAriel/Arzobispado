
<legend>Lista de Cuestionarios</legend>

  
  
    <% @surveys.each do |survey| %>
    
      <div class="panel panel-default">
        <div class="panel-heading"><%= survey.name %></div>
        <div class="panel-body">
          
        
        
          
          <%= link_to 'Ver', survey ,:class=>"btn btn-primary"%>

          <% if current_user != nil && current_user.rol == "admin" %>
            <%= link_to 'Editar', edit_survey_path(survey) ,:class=>"btn btn-primary"%>
            <% if AnswerUser.ya_respondio_cuestionario(current_user.id,survey.id)%>
              <%= link_to 'Responder', nuevo_path(survey.id) ,:class=>"btn btn-primary"%>
            <%end%>
            <%= link_to 'Eliminar', survey, method: :delete, data: { confirm: 'Are you sure?' } ,:class=>"btn btn-danger"%>
            <%= link_to 'Reporte',report_path(survey.id) ,:class=>"btn btn-warning"%>
          <%end%> 

          <% if current_user != nil && current_user.rol == "user" %>
            <% if AnswerUser.ya_respondio_cuestionario(current_user.id,survey.id)%>
              <%= link_to 'Responder', nuevo_path(survey.id),:class => "btn btn-success" %>
            <%end%>
          <%end%>
          
        

        </div>
      </div>

    <% end %>





<%if(current_user!=nil && current_user.rol=='admin') %>
  <%= link_to 'Nuevo Cuestionario', new_survey_id_path(@evento_id) ,:class=>"btn btn-success"%>
<%end%>

