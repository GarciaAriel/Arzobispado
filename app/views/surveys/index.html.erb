<h1>Listing surveys</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.name %></td>
        
        <td><%= link_to 'Ver', survey %></td>
        <td><%= link_to 'Editar', edit_survey_path(survey) %></td>
        <td><%= link_to 'Eliminar', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if AnswerUser.ya_respondio_cuestionario(current_user.id,survey.id)%>
          <td><%= link_to 'Responder', nuevo_path(survey.id) %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%if(current_user!=nil && current_user.rol=='admin')%>
  <%= link_to 'Nuevo Cuestionario', new_survey_id_path(@evento_id) %>
<%end%>

