<font color="white"><h1>Lista de Eventos</h1></font>


<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date start</th>
      <th>Date end</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr class="active">
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date_start %></td>
        <td><%= event.date_end %></td>
        <td><%= link_to 'Mostrar', event %></td>
        <% if current_user != nil && current_user.rol == "admin"%>
          <td><%= link_to 'Editar', edit_event_path(event) %></td>
          <td><%= link_to 'Eliminar', event, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user != nil && current_user.rol == "admin"%>
  <%= link_to 'Crear Nuevo Evento', new_event_path %>
<%end%>
