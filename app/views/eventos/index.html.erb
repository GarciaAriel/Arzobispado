<form class="navbar-form navbar-left">
      <%= form_tag eventos_path, :method => 'get' do %>
        <p>
          <%= text_field_tag :search, params[:search] , :class =>"form-control col-lg-8" %>
          <%= submit_tag "Buscar", :name => nil, :class =>"btn btn-default"%>
        </p>
      <% end %>
    </form>
    <br><br><br><br><br><br><br>


<ul class="nav nav-tabs" style="margin-bottom: 15px;">
  <li class="active"><a href="#list" data-toggle="tab"><font color="#317eac">Lista</font></a></li>
  <li class=""><a href="#cview" data-toggle="tab"><font color="#317eac">Calendario</font></a></li>
  
</ul>
<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade active in" id="list">
    <%= render 'list' %>
  </div>
  <div class="tab-pane fade" id="cview">
       <div id='calendar'></div>
  </div>
  
</div>

<% if current_user != nil && (current_user.rol == "admin" || current_user.rol == "super")%>
  <h3>
    <%= link_to image_tag("ic_action_new.png"), new_evento_path ,:class=>"btn btn-primary"%>

  </h3>  
<% end %>  

 <script>

$(document).ready(function() {


    $('#calendar').fullCalendar({
      lang: 'es',
      events: '/eventos.json'
    });
$('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
  var target = $(e.target).attr("href");
  if ((target == '#cview')) {
   $('#calendar').fullCalendar('render');
  }
  });

});
    
  

</script>