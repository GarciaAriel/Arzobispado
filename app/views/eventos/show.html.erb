

<form class="form-horizontal">
  <fieldset>

    <div class="form-group">
      
      <div class="panel panel-info">
        <div class="panel-heading">
          <i>
            <h4 class="panel-title">

              Titulo: <%= @evento.nombre%> 
          	  
            </h4>
          </i>	
        </div >
        <div align="center">

          <ul >
            Descripcion:
            <%= content_tag("pre", @evento.descripcion,:align => "center") %>
          </ul>
        </div >  
      </div>
    </div>
    <ul>
      Imagen del evento<br>
    
      <%if @evento.image.exists?%>

        <td><%= image_tag @evento.image.url(:thumb) %></td>
      <%else%>
        <td><%= image_tag '/assets/missing.png', :size=>"100x100" %></td>
      <%end%>
    </ul>
    <div>
      	<h4>
          <strong>Fecha inicio del evento:</strong> <%= @evento.fecha_inicio%><br><strong>Fin del evento:</strong> <%= @evento.fecha_fin%>
	      </h4>
    </div>

    
<div class="list-group">
  <%= link_to image_tag("ic_action_previous_item.png"), eventos_path ,:class=>"btn btn-primary"%>


  <% if current_user != nil && (current_user.rol=="admin" || current_user.rol=="super") %>  
    <%= link_to image_tag("ic_action_edit.png"), edit_evento_path(@evento),:class=>"btn btn-primary"%> |
  <%end%>  
  
    <%= link_to image_tag("survey.png"), surveys_index_path(@evento.id) ,:class=>"btn btn-primary"%>
</div>

	<div class="form-group">

    
	
	</div>

  </fieldset>
</form>
