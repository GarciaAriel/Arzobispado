<h1>Listing posts</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th></th>
      <th>Titulo</th>
      <th>Contenido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr class="active" style='cursor:pointer'>
        <td><%= image_tag post.image.url(:thumb) %></td>
        <td><font color="#FFF"><%= post.title %></font></td>
        <td><font color="#FFF"><%= post.content %></font></td>
        <td><%= link_to 'Show', post,:style=>'color:#ffffff;',:class => 'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Edit', edit_post_path(post),:style=>'color:#ffffff;',:class => 'btn btn-mini btn-warning'%></td>
        <td><%= form_for post, :html => {:method => 'delete'} do |t| %>
                    <input type="submit" value="Eliminar" class="btn btn-danger" onClick="return confirm('Quiere eliminar este post?');">
                  <%end%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Post', new_post_id_path(@evento_id) %>
