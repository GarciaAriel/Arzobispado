<h1>Posts</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>Titulo</th>
      <th>Contenido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr class="active" style='cursor:pointer'>
        <%if post.image.exists?%>
        <td><%= image_tag post.image.url(:thumb) %></td>
        <%else%>
        <td><%= image_tag '/assets/missing.png', :size=>"100x100" %></td>
          
        <%end%>
        <td> <div class="alert alert-dismissable alert-info">
            
            Comentarios: <br> <br>
            <p align="center">
            <%=post.comments.size %> </p>
            
          </div></td>
        
        <td><font color="#FFF"><b><%= post.title %></b><br><span>
admin@admin.com
</span><br>
 <span >
<%=post.created_at.to_date%>
</span></font></td>
        <td><%= link_to 'Ver', post,:style=>'color:#ffffff;',:class => 'btn btn-mini btn-success' %></td>
       <%if(current_user!=nil && current_user.rol=='admin')%>
        <td><%= link_to 'Editar', edit_post_path(post),:style=>'color:#ffffff;',:class => 'btn btn-mini btn-warning'%></td>
        <td><%= form_for post, :html => {:method => 'delete'} do |t| %>
                    <input type="submit" value="Eliminar" class="btn btn-danger" onClick="return confirm('Quiere eliminar este post?');">
                  <%end%></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if(current_user!=nil && current_user.rol=='admin')%>
<%= link_to 'Nuevo Post', new_post_id_path(@evento_id) %>
<%end%>